{
  "name": "@aryalabs/openauth",
  "version": "0.6.1",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "types": "./dist/types/*.d.ts"
    },
    "./ui": {
      "import": "./dist/esm/ui/index.js",
      "types": "./dist/types/ui/index.d.ts"
    }
  },
  "keywords": [
    "openauth",
    "auth",
    "authentication",
    "oauth",
    "openid",
    "openid connect"
  ],
  "peerDependencies": {
    "arctic": "^2.2.2",
    "hono": "^4.0.0"
  },
  "dependencies": {
    "@standard-schema/spec": "1.0.0",
    "aws4fetch": "1.0.20",
    "jose": "5.9.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250517.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "22.15.18",
    "arctic": "2.2.2",
    "hono": "^4.7.10",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "valibot": "1.1.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "files": [
    "src",
    "dist"
  ]
}
